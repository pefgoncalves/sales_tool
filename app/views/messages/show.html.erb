<%- model_class = Message -%>
<div class="page-header">
  <h1><%=t '.title', :default => Message %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @message.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:subject) %></dt>
      <dd><pre class="prettyprint"><%= @message.subject %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:text) %></dt>
      <dd><pre class="prettyprint"><%= @message.text %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
      <dd><pre class="prettyprint"><%= @message.active %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              messages_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_message_path(@message), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              message_path(@message),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

