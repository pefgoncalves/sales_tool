<%= form_for @lead, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :contact, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contact, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :company, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :status, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phones, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phones, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :extra, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :extra, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  leads_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
