<%- model_class = Lead -%>
<div class="page-header">
  <h1><%=t '.title', :default => Lead %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:contact) %></dt>
      <dd><pre class="prettyprint"><%= @lead.contact %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:company) %></dt>
      <dd><pre class="prettyprint"><%= @lead.company %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:status) %></dt>
      <dd><pre class="prettyprint"><%= @lead.status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @lead.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phones) %></dt>
      <dd><pre class="prettyprint"><%= @lead.phones %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:extra) %></dt>
      <dd><pre class="prettyprint"><%= @lead.extra %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leads_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lead_path(@lead), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lead_path(@lead),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

